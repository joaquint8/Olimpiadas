@inherits LayoutComponentBase
<PageTitle>Doctorsys</PageTitle>

<style>
    #components-layout-demo-fixed .logo {
        width: 120px;
        height: 31px;
        background: rgba(255, 255, 255, 0.2);
        margin: 16px 24px 16px 0;
        float: left;
    }

    .site-layout .site-layout-background {
        background: #fff;
    }

    .ant-layout-header, .ant-menu {
        background: #1f1f1f !important;
    }

    .ant-menu-title-content{
        color: #fafafa!important;
        font-weight: 600!important;
    }

    .ant-menu-item-selected, .ant-menu-item:hover {
        background: #003eb3 !important;
    }
</style>

<Layout Style="height: 100vh;">
    <Header Style="position: fixed; z-index: 1; width: 100%;">
        <div class="logo" />
        <Menu Theme="MenuTheme.Dark" Mode="MenuMode.Horizontal">
            <MenuItem Key="0">
                <NavLink href="/Empleado">Empleados</NavLink>
            </MenuItem>
            <MenuItem Key="1">
                <NavLink href="/LlamadasGenerales">Llamadas</NavLink>
            </MenuItem>
            <SubMenu Key="sub1" TitleTemplate=@sub2Title>
                <MenuItemGroup Key="g1">
                    <MenuItem Key="2">
                        <NavLink href="/Pacientes">Ver pacientes</NavLink>
                    </MenuItem>
                    <MenuItem Key="3">
                        <NavLink href="/IngresoPaciente">Ingresos</NavLink>
                    </MenuItem>
                    <MenuItem Key="4">
                        <NavLink href="#">Ficha medica</NavLink>
                    </MenuItem>
                </MenuItemGroup>
            </SubMenu>
            <SubMenu Key="sub1" TitleTemplate=@sub1Title>
                <MenuItemGroup Key="g2">
                    <MenuItem Key="5">
                        <NavLink href="/areas">Agregar</NavLink>
                    </MenuItem>
                    <MenuItem Key="6">
                        <NavLink href="/DetallesAreas">Ver</NavLink>
                    </MenuItem>
                </MenuItemGroup>
            </SubMenu>
        </Menu>
    </Header>
    <Content Class="site-layout" Style="padding:0 50px; margin-top: 64px; ">
        <Breadcrumb Style=" margin: 16px 0;">
            <BreadcrumbItem>Home</BreadcrumbItem>
            <BreadcrumbItem>List</BreadcrumbItem>
            <BreadcrumbItem>App</BreadcrumbItem>
        </Breadcrumb>
        <div class="site-layout-background" style="padding: 24px; min-height: 380px ">
            @Body
        </div>
    </Content>
    <Footer Style="text-align: center;">Olimpiadas ©2023 Creado por EESTN1</Footer>
</Layout>

@code{
    RenderFragment sub1Title =
    @<span>
        <span>Areas</span>
    </span>;
    RenderFragment sub2Title =
    @<span>
        <span>Pacientes</span>
    </span>;
}
